{
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "type": "module",
  "name": "@yourname/discjockey",
  "scripts": {
    "build": "npm-run-all --sequential --print-label build:* ",
    "build:app": "remix vite:build",
    "build:server": "tsx ./server/build.ts",
    "clean": "rimraf ./build",
    "database:generate": "prisma generate",
    "database:migrate": "prisma migrate dev",
    "database:up": "docker-compose up database",
    "dev": "remix vite:dev",
    "check:format": "prettier . '!./postgres-data' --check",
    "check:lint": "npm-run-all --print-label check:lint:*",
    "check:lint:code": "eslint .",
    "check:lint:style": "stylelint **/*.css --allow-empty-input",
    "check:types": "tsc",
    "format": "prettier . '!./postgres-data' --write",
    "lint": "npm-run-all --print-label lint:*",
    "lint:code": "eslint . --fix",
    "lint:style": "stylelint **/*.css --fix --allow-empty-input",
    "start:local": "dotenv cross-env NODE_ENV=production node ./build/serve.js",
    "start:production": "node ./build/serve.js"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@remix-run/express": "^2.8.1",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "compression": "^1.7.4",
    "express": "^4.18.3",
    "isbot": "^5.1.1",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@remix-run/dev": "^2.8.1",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.1",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "globals": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.2.5",
    "prisma": "^5.10.2",
    "rimraf": "^5.0.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "vite-tsconfig-paths": "^4.3.1"
  }
}
